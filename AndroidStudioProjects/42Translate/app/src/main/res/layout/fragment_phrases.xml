<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:context="com.example.noka.a42translate.Lyrics"
        android:weightSum="1">

        <!-- TODO: Update blank fragment layout -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/phrasesearch_area"
                android:layout_width="221dp"
                android:layout_height="62dp"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView" />

            <Button
                android:layout_width="136dp"
                android:layout_height="71dp"
                android:id="@+id/p_search_button"
                android:text="Search"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" />
        </GridLayout>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textBody"
            android:layout_weight="0.15" />


        <TextView
            android:text="Submit a Phrase:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/psubmit"
            android:layout_weight="0.15"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Phrase"
            android:id="@+id/editPhrase" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Translated Phrase"
            android:id="@+id/editTranslated" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Contextual Usages"
            android:id="@+id/useNative" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Contextual Usages Translated"
            android:id="@+id/useTranslate"
            android:ems="10"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLang_phrase"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/submittedBy"
            android:hint="Submitted By" />

        <CheckBox
            android:text="I Agree the Terms of Service and Privacy Policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxP"
            android:checked="false"
            android:autoText="true"
            tools:fontFamily="monospace" />

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            style="@style/Widget.AppCompat.Button.Colored" />


    </LinearLayout>
</ScrollView>
