<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="com.example.noka.a42translate.Lyrics"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/search_area"
        android:layout_width="221dp"
        android:layout_height="62dp"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView" />

        <Button
            android:layout_width="136dp"
            android:layout_height="71dp"
            android:id="@+id/bSearch"
            android:text="Search"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />
    </GridLayout>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textBody"
            android:layout_weight="0.15" />


        <TextView
            android:text="Submit Lyrics Here:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lsubmit"
            android:layout_weight="0.15"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Title"
            android:ems="10"
            android:id="@+id/editTitle" />

        <MultiAutoCompleteTextView
            android:hint="Artist Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editArtist" />
        <MultiAutoCompleteTextView
            android:hint="Artists Featured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artistFeat" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Lyrics Body"
            android:id="@+id/editTextBody" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLang_age"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Translation"
            android:id="@+id/editTextTranslate" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/submittedBy"
        android:hint="Submitted By" />

    <CheckBox
        android:text="I Agree the Terms of Service and Privacy Policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxTOSL"
        android:checked="false"
        android:autoText="true"
        tools:fontFamily="monospace" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bSubmit"
        style="@style/Widget.AppCompat.Button.Colored" />


</LinearLayout>
</ScrollView>
