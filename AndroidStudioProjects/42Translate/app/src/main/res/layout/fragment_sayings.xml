<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:context="com.example.noka.a42translate.Lyrics"
        android:weightSum="1">

        <!-- TODO: Update blank fragment layout -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sayingsearch_area"
                android:layout_width="221dp"
                android:layout_height="62dp"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView" />

            <Button
                android:layout_width="136dp"
                android:layout_height="71dp"
                android:id="@+id/s_search_button"
                android:text="Search"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" />
        </GridLayout>

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textBody"
            android:layout_weight="0.15" />


        <TextView
            android:text="Submit a Saying:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ssubmit"
            android:layout_weight="0.15"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Saying"
            android:id="@+id/editSay" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Translated Saying"
            android:id="@+id/edittranslated" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Contextual Usages"
            android:id="@+id/usenative" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Contextual Usages Translated"
            android:id="@+id/usetranslate"
            android:ems="10"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLang_say"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/submittedby"
            android:hint="Submitted By" />

        <CheckBox
            android:text="I Agree the Terms of Service and Privacy Policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxSay"
            android:checked="false"
            android:autoText="true"
            tools:fontFamily="monospace" />

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaySubmit"
            style="@style/Widget.AppCompat.Button.Colored" />

    </LinearLayout>
</ScrollView>
