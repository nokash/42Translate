<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginBottom="1dp"
    android:layout_gravity="center"
    android:layout_marginTop="1dp"
    android:id="@+id/card_list_post"
    app:cardCornerRadius="4dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:background="@color/cardview_shadow_start_color">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_post_owner"
                    android:textColor="@color/colorAccent"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/translated"
                    android:autoLink="web"
                    android:text="Translated"
                    android:textStyle="italic"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/langTxt"
                    android:autoLink="web"
                    android:text="Language"
                    android:textStyle="bold|italic"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usage_raw"
                    android:autoLink="web"
                    android:text="Raw"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="italic"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="20dp"
                    android:layout_marginRight="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usage_trans"
                    android:autoLink="web"

                    android:text="Usage Translated"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="8dp"
                    />
                <Button
                    android:text="DELETE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/delBtn"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark" />
            </LinearLayout>

</android.support.v7.widget.CardView>
